<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="484.0" prefWidth="754.0" styleClass="body" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.CourseRegistrationController">
    <children>
        <!-- Tiêu đề -->
        <Label layoutX="260.0" layoutY="14.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Course Registration" textFill="WHITE" />

        <!-- Bảng môn học có thể đăng ký -->
        <Label layoutX="14.0" layoutY="86.0" text="Available Subjects" textFill="WHITE" />
        <TableView fx:id="availableSubjectsTable" layoutX="14.0" layoutY="113.0" prefHeight="300" prefWidth="341.0">
            <columns>
                <TableColumn fx:id="subjectIDColumn" text="Subject ID" />
                <TableColumn fx:id="subjectNameColumn" prefWidth="186.39999389648438" text="Name" />
            <TableColumn fx:id="subjectCreditsColumn" prefWidth="75.199951171875" text="Credits" />
            </columns>
        </TableView>

        <!-- Bảng môn học đã đăng ký -->
        <Label layoutX="372.0" layoutY="86.0" text="Registered Subjects" textFill="WHITE" />
        <TableView fx:id="registeredSubjectsTable" layoutX="372.0" layoutY="113.0" prefHeight="300" prefWidth="330.0">
            <columns>
                <TableColumn fx:id="registeredSubjectIDColumn" text="Subject ID" />
                <TableColumn fx:id="registeredSubjectNameColumn" prefWidth="180.00003051757812" text="Name" />
            <TableColumn fx:id="registeredSubjectCreditsColumn" prefWidth="74.39990234375" text="Credits" />
            </columns>
        </TableView>

        <!-- Các nút chức năng -->
        <Button fx:id="registerButton" layoutX="143.0" layoutY="423.0" text="Register" />
        <Button fx:id="unregisterButton" layoutX="489.0" layoutY="423.0" style="-fx-background-color: red;" text="Unregister" />
    </children>
   <stylesheets>
      <URL value="@../style/hompage.css" />
      <URL value="@../style/SignIn.css" />
   </stylesheets>
</AnchorPane>
